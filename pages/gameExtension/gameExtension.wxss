.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.coming-soon {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.coming-soon-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.coming-soon-text {
  font-size: 32rpx;
  color: #666;
}

.features {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin: 60rpx 0;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
}

.home-btn {
  width: 80%;
  background-color: #9E9E9E;
  color: white;
  margin-top: auto;
  margin-bottom: 40rpx;
} 