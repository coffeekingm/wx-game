.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.player-area {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  height: 36vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 玩家1（上方）区域旋转180度 */
.player1 .player-content {
  transform: rotate(180deg);
}

