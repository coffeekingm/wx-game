.player-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.score {
  text-align: center;
  margin-bottom: 20rpx;
}

.choices {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.choice {
  width: 160rpx;
  height: 160rpx;
  border: 4rpx solid #ddd;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.choice.selected {
  border-color: #4CAF50;
  background: #E8F5E9;
}

.choice image {
  width: 120rpx;
  height: 120rpx;
}

.confirm-btn {
  margin-top: 20rpx;
  background-color: #4CAF50;  /* 默认绿色 */
  color: white;
}

/* 添加修改状态的样式 */
.confirm-btn.modifying {
  background-color: #FF9800;  /* 橙色 */
  color: #FFFFFF;  /* 白色文字 */
}

.result-area {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  text-align: center;
}

.result-text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.restart-btn, .rules-btn, .home-btn {
  margin: 10rpx;
  font-size: 28rpx;
}

.rules-btn {
  background-color: #2196F3;
  color: white;
}

.home-btn {
  background-color: #9E9E9E;
  color: white;
}

/* 修改重新开始按钮样式 */
.restart-btn {
  background-color: #2196F3;
  color: white;
  margin: 10rpx;
  font-size: 32rpx;
}

/* 修改游戏规则按钮样式 */
.rules-btn-small {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  color: #666;
  margin: 10rpx;
}

.player-content {
  width: 100%;
} 

.fog {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.98); /* 提高不透明度 */
  backdrop-filter: blur(20px); /* 增加模糊程度 */
  display: none;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fog.visible {
  display: flex;
}

.fog-tip {
  font-size: 16px;
  color: #333;
}

.choices {
  position: relative;
}
